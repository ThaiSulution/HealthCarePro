<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="docbaoonline.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="docbaoonline.activity.HelloActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="docbaoonline.activity.MainActivity"/>
        <activity
            android:name="docbaoonline.activity.CategotyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CATEGORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="docbaoonline.activity.NewsListActivity"/>
        <activity android:name="docbaoonline.activity.NewActivity"/>
        <activity android:name="docbaoonline.activity.NoRssActivity"/>
        
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_share_to_face"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bmi_content_take"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16.0dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8.0dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="4.0dip"
                        android:text="000"
                        android:textSize="40.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4.0dip"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="10.0dip"
                        android:singleLine="true"
                        android:text="@string/kg_per_m"
                        android:textColor="@color/light_grey"
                        android:textSize="24.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/measurement_scala"
                    android:layout_width="match_parent"
                    android:layout_height="8.0dip"
                    android:layout_marginTop="8.0dip"
                    android:orientation="horizontal"
                    android:weightSum="6.0" >

                    <View
                        android:id="@+id/bmi_v1"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#9400D3" />

                    <View
                        android:id="@+id/bmi_v2"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#6495ED" />

                    <View
                        android:id="@+id/bmi_v3"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#FFFF00" />

                    <View
                        android:id="@+id/bmi_v4"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#F4A460" />

                    <View
                        android:id="@+id/bmi_v5"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#FF6600" />

                    <View
                        android:id="@+id/bmi_v6"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="#ffff0054" />
                </LinearLayout>

                <View
                    android:id="@+id/bmi_indicator"
                    android:layout_width="3.0dip"
                    android:layout_height="16.0dip"
                    android:layout_marginTop="-13.0dip"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32.0dip"
                    android:background="@drawable/box_light"
                    android:padding="5.0dip" >

                    <ImageView
                        android:id="@+id/image_bmi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/binhthuong" />

                    <TextView
                        android:id="@+id/bmi_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/status_nomal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/box_light"
                    android:padding="5.0dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hr_last_date_demo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/box_light"
                    android:padding="5.0dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gopro_notification" />

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hr_last_date_demo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/image_share_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/ic_share" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>